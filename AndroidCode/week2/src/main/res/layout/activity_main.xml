    <TextView
        android:id="@+id/receivePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="456465" />

    <CheckBox
        android:id="@+id/ch_asd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true" />
